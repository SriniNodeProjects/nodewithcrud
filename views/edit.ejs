<html>
<head>
    <title> CRUD DEMO </title>
</head>
<body>
<h2>
    <% if(typeof passwordmismatch  !== "undefined"){%>
    <%= passwordmismatch %> </h2>
    <%}%>
    
<h1> Edit People</h1>
<form name="form1" method="POST" action="/update">
    <table>
        <tr>
            <td>First name</td>
            <td><input type="text" name="firstname" id="firstname" value="<%= memberdata.firstname; %>"></td>
        </tr>
        <tr>
            <td>last name</td>
            <td><input type="text" name="lastname" id="lastname" value="<%= memberdata.lastname; %>"></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type="text" name="email" id="email" value="<%= memberdata.email %>"></td>
        </tr>
        <tr>
            <td>Phone Number</td>
            <td><input type="text" name="phno" id="phno" value="<%= memberdata.phno %>"></td>
        </tr>
        <tr>
           <td>
               <input type="hidden" id="password" name="password" value="<%= memberdata.password  %>"/>
               <input type="hidden" id="userid" name="userid" value="<%= memberdata._id %>" />
            </td> 
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Save" name="save" id="save"></td>
        </tr>
    </table>
</form>

</body>
</html>
